<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta property="og:title" content="HackRU Spring 2017" />
	<meta property="og:description" content="Spring into learning and creating. HackRU's 12th hackathon is coming to the Rutgers Athletic Center April 22nd - 23rd." />
	<meta property="og:image" content="http://www.hackru.org/assets/hackRU_SP17_avatar.png" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Sign up for HackRU Spring 2017, taking place from April 22nd to 23rd.">
	<title>HackRU - Admin</title>

	<link rel="shortcut icon" href="./assets/logo-favicon.ico" type="image/x-icon">
	<link rel="icon" href="./assets/logo-favicon.ico" type="image/x-icon">

	<link rel="stylesheet" type="text/css" href="./css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="./css/custom.css">

	<script src="./js/jquery-3.1.1.min.js"></script>
	<script src="./js/bootstrap.min.js"></script>
    <% if(!now && !done){ %><script src="./js/admin-accept-users.js"></script><% } %>
	<script src="https://use.fontawesome.com/8dec7403ea.js"></script>
	<script src="./js/custom.js"></script>
</head>

<body>
<div class="container-fluid">

	<div class="row subpage-section" id="dashboard">
		<div class="col-xs-12">
			<div class="row subpage-hero">
				<div class="col-xs-12 subpage-nav"></div>
				<div class="col-xs-12 subpage-hero-title">
					<h1 class="hidden-xs">Admin</h1>
					<h3 class="visible-xs-block">Admin</h3>
				</div>
			</div>

			<div class="row subpage-content text-center">
				<div class="col-xs-10 col-sm-5">

                    <% if(message) { %>
					<h4 class="bg-danger"><%= message %></h4>
                    <% } %>


                    <% if(now) { %>
					<h3>Check-In</h3>
					<!-- <form action="/check-in" method="post">
						<input type="text" name="email" value="Email Address">
						<input type="submit" value="Submit">
					</form> -->
					<%= checkin %>
                    <% }else{ %>
                    <h3>Accept users!</h3>
                        <% if(done) { %>
                        <p>All done!</p>
                        <% }else{ %>
                        <p>Right arrow key = accept, left arrow key = reject</p>
                        <p>Remember the question is: <%= question %></p>
                        <p>Short answer: <span id="user_answer"><%= user.short_answer%></span></p>
                        <p>This person will graduate in <span id="user_level_of_study"><%= user.grad_year %></span> majoring in <span id="user_major"><%= user.mlh_data.major %></span></p>
                        <!-- Don't make me do PHP all summer and then be surprised by this. -->
                        <input type="hidden" id="user_id" value=<%=user.id%>></input>
                        <p> Aggregates: <span id="counts"><%= counts %></span></p>
                        <% } %>
                    <% } %>

					<!-- -->

					<a href="/dashboard" class="btn btn-default content-button">Dashboard</a>
				</div>
			</div>
		</div>
	</div>

	<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

	<div class="row" id="footer"></div>

</div>
</body>

</html>
